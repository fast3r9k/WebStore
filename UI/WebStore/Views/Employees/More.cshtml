@using WebStore.Domain.Entities.Identity
@model WebStore.Domain.Entities.Employee

<div class="container">
    <h3>Employee</h3>

    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.Id</dd>

        <dt>LastName</dt>
        <dd>@Model.LastName</dd>

        <dt>FirstName</dt>
        <dd>@Model.FirstName</dd>

        <dt>Patronymic</dt>
        <dd>@Model.Patronymic</dd>

        <dt>Age</dt>
        <dd>@Model.Age</dd>
    </dl>
    
    <hr/>
    <a asp-controller="Employees" asp-action="Index" class="btn btn-info">Return to list</a> 
    @if (User.IsInRole(Role.Admin))
    {
        <a asp-controller="Employees" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Remove</a>
    }
    
</div>